<div id="bookmark-card">
<div class="card-label">Variant Bookmarks</div>
	<div style="margin-top:5px;" >
  	    <div id="import-bookmarks-dropdown" class="" style="margin-top:-15px;float:left;">
          <div class="btn-toolbar">
            <div class="btn-group"  style="display:inline;margin-top: 15px;">

              <button type="button"  style="font-size:11px;padding-top: 2px;padding-bottom: 1px;" class=" icon-button-sm btn btn-raised btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                <i class="material-icons" style="font-size:14px;padding-right:2px;padding-left:0px;padding-top:2px;">content_paste</i>
                Import<span class="caret" style="margin-left:2px;"></span>
              </button>

              <ul class="dropdown-menu " role="menu">
                <li id="copy-paste-li">
                  <div style="padding-left:20px;padding-right:20px;padding-top:3px;padding-bottom:3px;">
                    <div>Copy/Paste</div>
                    <textarea style="width:180px;height:100px" id="bookmarks-to-import"></textarea>
                    <div style="text-align:right">
                      <button id="add-bookmarks-button" 
                      type="submit"
                      onclick="bookmarkCard.importBookmarks()" 
                      class="icon-button-sm btn btn-default btn-raised" 
                      style="margin-left:3px;padding-top:0px;padding-bottom:0px;margin-top:0px;margin-bottom: 1px;">
                        Done
                      </button>
                    </div>
                  </div>
                </li>
              </ul>
            </div>
          </div>
        </div>

        <div id="export-bookmarks-dropdown" class="" style="margin-top:-15px;float:left;margin-left:20px;margin-right:10px;">
          <div class="btn-toolbar">
            <div class="btn-group"  style="display:inline;margin-top: 15px;">

              <button type="button"  style="font-size:11px;padding-top: 2px;padding-bottom: 1px;" class=" icon-button-sm btn btn-raised btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
              <i class="material-icons" style="font-size:14px;padding-right:2px;padding-top:2px;">archive</i>
                Export<span class="caret" style="margin-left:2px;"></span>
              </button>

              <ul class="dropdown-menu" role="menu">
                <li id="export-all-bookmarks" >
                 <a href="javascript:void(0)" onclick="bookmarkCard.exportBookmarks('all')">All bookmarks</a>
                </li>
                <li id="export-favorite-bookmarks" onclick="bookmarkCard.exportBookmarks('favorites')">
                 <a href="javascript:void(0)" onclick="bookmarkCard.exportBookmarks('favorites')">
                  <i class="material-icons" style="font-size:14px;width: 14px;float: left;color: gold;margin-right: 2px;">star_rate</i>
                  Starred
                </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
	</div>

  <div id="edit-bookmarks-box" class="hide" style="text-align:right;clear:both;font-size:11px;">
    <a href="javascript:void(0)" id="edit-bookmarks" 
    onclick="$('#bookmark-card #bookmark-panel').toggleClass('editmode');$('#bookmark-card #edit-bookmarks').toggleClass('hide');$('#bookmark-card #done-edit-bookmarks').toggleClass('hide')">Edit</a>

    <a href="javascript:void(0)" id="done-edit-bookmarks"  class="hide"
    onclick="$('#bookmark-card #bookmark-panel').toggleClass('editmode');;$('#bookmark-card #edit-bookmarks').toggleClass('hide');$('#bookmark-card #done-edit-bookmarks').toggleClass('hide')">Done</a>
  </div>

	<div id="bookmark-panel" style="clear:both;margin-right:10px;">
	</div>

	
</div>