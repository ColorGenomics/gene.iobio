<div id="gene-badge" style="display:inline-block;margin-right:7px;padding-bottom:7px;" >

	<a id="gene-badge-button" href="javascript:void(0)" onclick="selectGeneBadge(this)" 
		class="btn btn-raised btn-default" 
		style="color: grey !important;font-size: 11px;padding: 2px 4px 2px 4px;margin: 0px;">
        <span id="gene-badge-name" style="float:left;"></span>
        <img class="gene-badge-loader hide" style="width: 15px; height: 15px; float: left;" src="assets/images/wheel.gif">
  		<span id="gene-badge-danger-count" style="float:left;"></span>
  		<span id="gene-badge-circle" style="float:left;"></span>
  		<span id="gene-badge-symbols" style="height:14px;padding-top:1px;padding-left:3px;float:right;"></span>

	</a>	

	<a id="gene-badge-remove" href="javascript:void(0)" 
		onclick="removeGeneBadge(this)" class="btn btn-flatbtn-default" 
		style="padding: 0;margin-top: 0px;margin-bottom: 0px;color: grey !important;font-size: 11px;margin-left: -2px;margin-left: -3px;padding-top: 3px;">

	  	<i class="mdi-content-clear"></i>

	</a>
</div>